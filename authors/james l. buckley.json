[
    {
        "url": "/quotes/james_l_buckley_254190",
        "quote": "What people fail to appreciate is that the currency of corruption in elective office is, not money, but votes.",
        "author": {
            "name": "James L. Buckley",
            "url": "/quotes/james_l_buckley_254190"
        },
        "topics": [
            {
                "name": "Appreciate",
