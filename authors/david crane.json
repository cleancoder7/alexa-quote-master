    {
        "url": "/quotes/david_crane_227861",
        "quote": "We wanted to create an environment where if a game player enjoyed the 'writing style' of a particular game designer, he or she could look for the next game by that same author and not be disappointed.",
        "author": {
            "name": "David Crane",
            "url": "/quotes/david_crane_227861"
        },
        "topics": [
            {
                "name": "Game",
                "url": "/topics/game"
            },
            {
                "name": "Next",
