        ]
    },
    {
        "url": "/quotes/steven_hatfill_355243",
        "quote": "I am a loyal American, and I love my country.",
        "author": {
            "name": "Steven Hatfill",
            "url": "/quotes/steven_hatfill_355243"
        },
