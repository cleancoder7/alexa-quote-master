            },
            {
                "name": "Very",
                "url": "/topics/very"
            }
        ]
    },
    {
        "url": "/quotes/steven_hatfill_355242",
        "quote": "I'm a medical doctor and a biomedical scientist.",
        "author": {
            "name": "Steven Hatfill",
            "url": "/quotes/steven_hatfill_355242"
        },
        "topics": [
            {
