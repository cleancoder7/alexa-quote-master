            {
                "name": "Harm",
                "url": "/topics/harm"
            },
            {
                "name": "Necessary",
                "url": "/topics/necessary"
            }
        ]
    },
    {
        "url": "/quotes/said_nursi_692131",
        "quote": "Time has shown that Paradise is not cheap, and neither is Hell unnecessary.",
        "author": {
            "name": "Said Nursi",
            "url": "/quotes/said_nursi_692131"
        },
        "topics": [
            {
                "name": "Paradise",
