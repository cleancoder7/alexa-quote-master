[
    {
        "url": "/quotes/robert_kurson_747937",
        "quote": "It's never too late in life to have a genuine adventure.",
        "author": {
            "name": "Robert Kurson",
            "url": "/quotes/robert_kurson_747937"
        },
        "topics": [
            {
                "name": "Adventure",
