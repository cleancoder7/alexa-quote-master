    {
        "url": "/quotes/floyd_skloot_738563",
        "quote": "When memories fade, can one ever really return home?",
        "author": {
            "name": "Floyd Skloot",
            "url": "/quotes/floyd_skloot_738563"
        },
        "topics": [
            {
                "name": "Memories",
