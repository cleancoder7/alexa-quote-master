    {
        "url": "/quotes/floyd_skloot_738551",
        "quote": "Neurologists have a host of clinical tests that let them observe what a brain-damaged patient can and cannot do.",
        "author": {
            "name": "Floyd Skloot",
            "url": "/quotes/floyd_skloot_738551"
        },
        "topics": [
            {
                "name": "Tests",
                "url": "/topics/tests"
            },
            {
                "name": "Patient",
                "url": "/topics/patient"
            },
