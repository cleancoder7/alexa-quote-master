[
    {
        "url": "/quotes/andrew_j_bernstein_499431",
        "quote": "It's time we learned the truth about stress. It's time we identified the thoughts that actually create our stress and learned to dismantle them one by one.",
        "author": {
            "name": "Andrew J. Bernstein",
            "url": "/quotes/andrew_j_bernstein_499431"
        },
        "topics": [
            {
