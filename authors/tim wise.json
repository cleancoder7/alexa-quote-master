            }
        ]
    },
    {
        "url": "/quotes/tim_wise_675644",
        "quote": "Too often, systems of oppression turn those who are the targets of the oppression against one another.",
        "author": {
            "name": "Tim Wise",
            "url": "/quotes/tim_wise_675644"
        },
        "topics": [
            {
                "name": "Oppression",
                "url": "/topics/oppression"
