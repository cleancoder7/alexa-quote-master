            {
                "name": "Me",
                "url": "/topics/me"
            },
            {
                "name": "Escape",
                "url": "/topics/escape"
            }
        ]
    },
    {
        "url": "/quotes/tom_scholz_342172",
        "quote": "Most people live their life around what other people do.",
        "author": {
            "name": "Tom Scholz",
            "url": "/quotes/tom_scholz_342172"
        },
        "topics": [
            {
                "name": "People",
