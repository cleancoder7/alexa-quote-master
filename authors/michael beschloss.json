[
    {
        "url": "/quotes/michael_beschloss_358731",
        "quote": "As parties began to develop around the turn of the 19th century, you had party nominees for President nominated in caucuses made up of party members in Congress.",
        "author": {
            "name": "Michael Beschloss",
            "url": "/quotes/michael_beschloss_358731"
        },
        "topics": [
            {
                "name": "Congress",
