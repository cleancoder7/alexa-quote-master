            }
        ]
    },
    {
        "url": "/quotes/david_d_burns_618082",
        "quote": "I've been interviewed for hundreds of magazine articles, and they come out incredibly goofy about 90 percent of the time.",
        "author": {
            "name": "David D. Burns",
            "url": "/quotes/david_d_burns_618082"
        },
        "topics": [
            {
                "name": "Goofy",
                "url": "/topics/goofy"
