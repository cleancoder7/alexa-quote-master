[
    {
        "url": "/quotes/david_novak_637850",
        "quote": "The slogan 'Never Again!' that emerged after the Holocaust implies that the Holocaust has a universal moral meaning, which, if properly learned, can provide at least a theoretical prophylactic against its repetition against anyone.",
        "author": {
            "name": "David Novak",
            "url": "/quotes/david_novak_637850"
        },
        "topics": [
            {
                "name": "Learned",
                "url": "/topics/learned"
            },
            {
                "name": "Which",
                "url": "/topics/which"
