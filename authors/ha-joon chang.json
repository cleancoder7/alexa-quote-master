            {
                "name": "Some",
                "url": "/topics/some"
            },
            {
                "name": "Benefits",
                "url": "/topics/benefits"
            }
        ]
    },
    {
        "url": "/quotes/hajoon_chang_528290",
        "quote": "When we assess the impact of technological changes, we tend to downplay things that happened a while ago.",
