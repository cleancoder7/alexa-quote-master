            }
        ]
    },
    {
        "url": "/quotes/mitchel_resnick_643060",
        "quote": "I believe that the best way to help people understand the world is to provide them with opportunities to actively explore, experiment, and express themselves.",
        "author": {
            "name": "Mitchel Resnick",
            "url": "/quotes/mitchel_resnick_643060"
        },
        "topics": [
            {
                "name": "Explore",
                "url": "/topics/explore"
