[
    {
        "url": "/quotes/alice_oswald_620756",
        "quote": "I hate not managing to speak clearly. I really hate it. I get a feeling of claustrophobia - like I'm locked in my own head - if what I've said hasn't reached someone.",
        "author": {
            "name": "Alice Oswald",
            "url": "/quotes/alice_oswald_620756"
        },
        "topics": [
            {
                "name": "My Own",
                "url": "/topics/my_own"
