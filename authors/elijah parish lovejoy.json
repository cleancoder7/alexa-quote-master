[
    {
        "url": "/quotes/elijah_parish_lovejoy_729924",
        "quote": "If I am not safe in Alton, I shall not be safe anywhere.",
        "author": {
            "name": "Elijah Parish Lovejoy",
            "url": "/quotes/elijah_parish_lovejoy_729924"
        },
        "topics": [
            {
                "name": "I Am",
