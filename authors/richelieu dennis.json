            {
                "name": "Like",
                "url": "/topics/like"
            },
            {
                "name": "Aspiring",
                "url": "/topics/aspiring"
            }
        ]
    },
    {
        "url": "/quotes/richelieu_dennis_890085",
        "quote": "Our forward track must focus on including everyone, embracing everyone, and celebrating the beauty - and normalcy - of everyone's differences.",
        "author": {
            "name": "Richelieu Dennis",
            "url": "/quotes/richelieu_dennis_890085"
        },
        "topics": [
            {
                "name": "Beauty",
                "url": "/topics/beauty"
            },
            {
                "name": "Everyone",
                "url": "/topics/everyone"
