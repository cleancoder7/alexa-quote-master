    {
        "url": "/quotes/john_avlon_416088",
        "quote": "One tell-tale sign of a Wingnut: they always confuse partisanship with patriotism.",
        "author": {
            "name": "John Avlon",
            "url": "/quotes/john_avlon_416088"
        },
        "topics": [
            {
                "name": "Patriotism",
                "url": "/topics/patriotism"
