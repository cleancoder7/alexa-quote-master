            },
            {
                "name": "Autocracy",
                "url": "/topics/autocracy"
            }
        ]
    },
    {
        "url": "/quotes/sun_yatsen_778111",
        "quote": "The key to success is action, and the essential in action is perseverance.",
        "author": {
            "name": "Sun Yat-sen",
            "url": "/quotes/sun_yatsen_778111"
