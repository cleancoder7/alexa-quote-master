[
    {
        "url": "/quotes/simon_greenleaf_320847",
        "quote": "By competent evidence, is meant such as the nature of the thing to be proved requires; and by satisfactory evidence, is meant that amount of proof, which ordinarily satisfies an unprejudiced mind, beyond any reasonable doubt.",
        "author": {
            "name": "Simon Greenleaf",
            "url": "/quotes/simon_greenleaf_320847"
        },
        "topics": [
            {
                "name": "Mind",
                "url": "/topics/mind"
